                        @i
                    </a>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <a href="?query=@ViewBag.Query&page=@(ViewBag.CurrentPage + 1)" class="w-10 h-10 rounded-full border border-gray-300 flex items-center justify-center text-gray-500 hover:bg-gray-50"><i class="bi bi-chevron-right"></i></a>
