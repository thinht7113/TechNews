                            </a>
                        </div>
                    </div>
                </article>
            }
        </div>
        
        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <div class="mt-16 flex justify-center gap-2">
                @if (ViewBag.CurrentPage > 1)
                {
                    <a href="?page=@(ViewBag.CurrentPage - 1)" class="w-10 h-10 rounded-full border border-gray-300 flex items-center justify-center text-gray-500 hover:bg-gray-50"><i class="bi bi-chevron-left"></i></a>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <a href="?page=@i" class="w-10 h-10 rounded-full flex items-center justify-center shadow-sm transition @(i == ViewBag.CurrentPage ? "bg-primary text-white scale-110" : "border border-gray-300 text-gray-600 hover:bg-gray-50")">
                        @i
                    </a>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <a href="?page=@(ViewBag.CurrentPage + 1)" class="w-10 h-10 rounded-full border border-gray-300 flex items-center justify-center text-gray-500 hover:bg-gray-50"><i class="bi bi-chevron-right"></i></a>
                }
            </div>
        }
    }
