@model List<TechNews.Domain.Entities.Post>
@{
    ViewData["Title"] = ViewBag.CategoryName;
}

<div class="max-w-6xl mx-auto">
    <!-- Header -->


    @if (Model != null && Model.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var post in Model)
            {
                <article class="flex flex-col h-full group">
                    <div class="overflow-hidden rounded-xl shadow-sm mb-4 h-60 relative">
                        <a href="/post/@post.Slug">
                            <img src="@post.Thumbnail" alt="@post.Title" class="w-full h-full object-cover group-hover:scale-105 transition duration-500">
                        </a>
                        <span class="absolute top-4 right-4 bg-white/90 backdrop-blur text-xs font-bold px-3 py-1 rounded-full text-gray-800 shadow-sm">
                            <i class="bi bi-clock"></i> @post.CreatedDate.ToString("dd/MM")
                        </span>
                    </div>
                    
                    <div class="flex-1 flex flex-col">
                        <h2 class="text-xl font-bold text-gray-900 mb-3 font-serif leading-snug group-hover:text-primary transition">
                            <a href="/post/@post.Slug">@post.Title</a>
                        </h2>
                        <p class="text-gray-600 line-clamp-3 mb-4 flex-grow text-sm leading-relaxed">@post.ShortDescription</p>
                        
                        <div class="mt-auto">
                             <a href="/post/@post.Slug" class="inline-flex items-center text-primary font-medium hover:underline text-sm">
