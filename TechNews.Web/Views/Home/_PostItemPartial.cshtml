@model TechNews.Domain.Entities.Post

<article class="flex flex-col h-full bg-white border border-gray-100 rounded-2xl overflow-hidden shadow-sm hover:shadow-soft transition-all duration-300 group">
    <!-- Thumbnail -->
    <a href="/post/@Model.Slug" class="block w-full aspect-video overflow-hidden relative">
        <div class="absolute inset-0 bg-gray-900/10 group-hover:bg-transparent transition-colors z-10"></div>
        <img src="@Model.Thumbnail" alt="@Model.Title" loading="lazy" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
        <span class="absolute top-3 left-3 bg-white/90 backdrop-blur text-[#2563eb] text-[10px] font-bold px-2 py-1 rounded shadow-sm z-20">
            @Model.Category?.Name
        </span>
    </a>

    <!-- Content -->
    <div class="p-5 flex flex-col flex-grow">
        <h3 class="text-lg font-bold leading-tight mb-3 text-slate-800 group-hover:text-[#2563eb] transition-colors line-clamp-2">
            <a href="/post/@Model.Slug">@Model.Title</a>
        </h3>
        
        <p class="text-sm text-slate-500 leading-relaxed line-clamp-3 mb-4 flex-grow">
            @Model.ShortDescription
        </p>
        
        <div class="flex items-center justify-between text-xs text-slate-400 pt-4 border-t border-slate-50 mt-auto">
            <div class="flex items-center gap-2">
                 <i class="bi bi-calendar3"></i>
                <span>@Model.CreatedDate.ToString("dd/MM")</span>
            </div>
            
            <div class="flex items-center gap-3">
                 <span class="flex items-center gap-1 hover:text-[#2563eb] transition-colors">
                    <i class="bi bi-eye"></i> @Model.ViewCount
                </span>
                <span class="flex items-center gap-1 hover:text-[#2563eb] transition-colors">
                     <i class="bi bi-share"></i>
                </span>
            </div>
        </div>
    </div>
</article>

