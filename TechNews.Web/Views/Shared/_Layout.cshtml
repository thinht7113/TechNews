@inject TechNews.Infrastructure.Data.TechNewsDbContext _db
@{
    var _settings = _db.Settings.ToDictionary(s => s.Key, s => s.Value ?? "");
    string _get(string key, string fallback = "") => _settings.ContainsKey(key) && !string.IsNullOrEmpty(_settings[key]) ? _settings[key] : fallback;
    var _siteTitle = _get("SiteTitle", "TechNews");
    var _contactEmail = _get("ContactEmail", "contact@technews.com");
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta name="description" content="@ViewData["MetaDescription"]" />
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#2563eb',
                        secondary: '#757575',
                        dark: '#0f172a',
                        light: '#f8fafc',
                        surface: '#ffffff'
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'], 
                        serif: ['Merriweather', 'serif'],
                    },
                    boxShadow: {
                        'soft': '0 10px 40px -10px rgba(0, 0, 0, 0.08)',
                        'glow': '0 0 20px rgba(37, 99, 235, 0.4)',
                    }
                }
            }
        }
    </script>
    <!-- Frameworks -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Merriweather:ital,wght@0,300;0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    
    <style>
        body { font-family: 'Inter', sans-serif; background-color: #f8fafc; }
        .font-serif { font-family: 'Merriweather', serif; }
        
        /* Custom Scrollbar */
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: #f1f1f1; }
        ::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #94a3b8; }

        .glass {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.3);
        }
        
        .nav-link { 
            position: relative;
            font-weight: 600; 
            color: #334155; 
            transition: color 0.3s;
        }
        .nav-link:hover { color: #2563eb; }
        .nav-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: -4px;
            left: 0;
            background-color: #2563eb;
            transition: width 0.3s;
        }
        .nav-link:hover::after { width: 100%; }
        
        .container-custom { max-w: 1280px; margin: 0 auto; padding: 0 1.5rem; }
    </style>
</head>
<body class="bg-slate-50 text-slate-800 flex flex-col min-h-screen">

    <!-- Glass Header -->
    <header class="fixed top-0 left-0 w-full z-50 glass transition-all duration-300" 
            x-data="{ mobileMenuOpen: false, scrolled: false }"
            @@scroll.window="scrolled = (window.pageYOffset > 20)"
            :class="{ 'shadow-soft': scrolled }">
            
        <div class="container-custom h-[80px] flex items-center justify-between">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-2 group">
                <div class="relative w-10 h-10 bg-[#2563eb] text-white flex items-center justify-center font-bold text-2xl rounded-xl shadow-glow transition-transform group-hover:scale-105 group-hover:rotate-3">
                    @_siteTitle[0]
                    <div class="absolute inset-0 rounded-xl bg-white opacity-20 blur-sm"></div>
                </div>
                <div class="flex flex-col leading-none">
                    <span class="text-2xl font-extrabold tracking-tight text-slate-900 group-hover:text-[#2563eb] transition-colors">@_siteTitle</span>
                    <span class="text-[0.65rem] font-bold text-slate-400 uppercase tracking-[0.2em]">@_get("SiteDescription", "FUTURE OF TECH")</span>
                </div>
            </a>

            <!-- Desktop Nav -->
            <nav class="hidden md:flex items-center gap-8">
                <a href="/" class="nav-link text-[#2563eb]">Trang chủ</a>
                 @await Component.InvokeAsync("Menu")
            </nav>

            <!-- Search & Actions -->
            <div class="flex items-center gap-4">
                <div class="relative hidden lg:block group">
                    <form action="/post/search" method="get">
                        <input type="text" name="query" placeholder="Tìm kiếm..." 
                               class="bg-slate-100 border border-transparent rounded-full pl-4 pr-10 py-2 text-sm w-48 focus:w-64 focus:bg-white focus:border-[#2563eb]/30 focus:shadow-soft outline-none transition-all duration-300" />
                        <button type="submit" class="absolute right-3 top-2 text-slate-400 hover:text-[#2563eb] transition-colors">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </div>

                @if (User.Identity!.IsAuthenticated)
                {
                    <div class="hidden md:flex items-center gap-3 pl-4 border-l border-slate-200">
                        @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                        {
                            <a href="/Admin" class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-slate-100 hover:bg-[#2563eb] hover:text-white transition-colors text-sm font-medium" title="Vào trang quản trị">
                                <i class="bi bi-grid-fill"></i> <span class="hidden lg:inline">Quản trị</span>
                            </a>
                        }
                        <span class="text-sm font-medium text-slate-600">@User.Identity.Name</span>
                         <form class="inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                             <button type="submit" class="flex items-center justify-center w-9 h-9 rounded-full bg-slate-100 hover:bg-slate-200 transition-colors" title="Đăng xuất">
                                 <i class="bi bi-box-arrow-right"></i>
                             </button>
                        </form>
                    </div>
                }
                else
                {
                     <a href="/Identity/Account/Login" class="hidden md:inline-flex items-center gap-2 px-5 py-2 rounded-full bg-slate-900 text-white text-sm font-semibold hover:bg-[#2563eb] hover:shadow-glow transition-all duration-300">
                        Đăng nhập
                    </a>
                }

                <!-- Mobile Menu Button -->
                <button @@click="mobileMenuOpen = !mobileMenuOpen" class="md:hidden text-2xl text-slate-700 hover:text-[#2563eb] transition-colors">
                    <i class="bi" :class="mobileMenuOpen ? 'bi-x-lg' : 'bi-list'"></i>
                </button>
            </div>
        </div>
        
        <!-- Mobile Menu Dropdown -->
        <div x-show="mobileMenuOpen" 
             x-transition:enter="transition ease-out duration-200"
             x-transition:enter-start="opacity-0 -translate-y-2"
             x-transition:enter-end="opacity-100 translate-y-0"
             x-transition:leave="transition ease-in duration-150"
             x-transition:leave-start="opacity-100 translate-y-0"
             x-transition:leave-end="opacity-0 -translate-y-2"
             class="md:hidden bg-white/95 backdrop-blur-xl border-t border-gray-100 p-6 shadow-xl absolute w-full left-0 top-full z-40 h-[calc(100vh-80px)] overflow-y-auto">
             
             <nav class="flex flex-col space-y-6 text-lg font-medium">
                <a href="/" class="text-[#2563eb]">Trang chủ</a>
                 @await Component.InvokeAsync("Menu")
                 
                 <div class="pt-6 border-t border-gray-100">
                      @if (User.Identity!.IsAuthenticated)
                        {
                            <div class="flex items-center justify-between">
                                <span class="text-slate-500">Xin chào, @User.Identity.Name</span>
                                <div class="flex gap-2">
                                     @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                                     {
                                         <a href="/Admin" class="text-[#2563eb] font-bold">Trang quản trị</a>
                                     }
                                     <form class="inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                                         <button type="submit" class="text-slate-500 hover:text-slate-800">Đăng xuất</button>
                                    </form>
                                </div>
                            </div>
                        }
                        else
                        {
                             <a href="/Identity/Account/Login" class="block w-full text-center py-3 rounded-xl bg-slate-900 text-white font-bold hover:bg-[#2563eb] transition">
                                Đăng nhập
                            </a>
                        }
                 </div>
            </nav>
        </div>
    </header>

    <!-- Spacer for Fixed Header -->
    <div class="h-[80px]"></div>



    <!-- Main Content -->
    <main class="flex-grow">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white text-gray-600 py-12 mt-20 font-sans border-t border-gray-200 relative overflow-hidden">
        <!-- Background Decor -->
        <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary via-orange-500 to-primary"></div>
        <div class="absolute -bottom-24 -left-24 w-80 h-80 bg-primary opacity-5 rounded-full blur-3xl pointer-events-none"></div>

        <div class="container-custom mx-auto px-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 mb-10">
                @await Component.InvokeAsync("SiteSettings")

                <!-- Links 1 -->
                <div>
                    <h4 class="font-bold text-gray-900 text-lg mb-6">Chuyên mục</h4>
                    <ul class="space-y-3 text-sm">
                        <li><a href="#" class="hover:text-primary transition-colors flex items-center gap-2"><i class="bi bi-chevron-right text-xs"></i> Công nghệ</a></li>
                        <li><a href="#" class="hover:text-primary transition-colors flex items-center gap-2"><i class="bi bi-chevron-right text-xs"></i> Lập trình</a></li>
                        <li><a href="#" class="hover:text-primary transition-colors flex items-center gap-2"><i class="bi bi-chevron-right text-xs"></i> Blockchain</a></li>
                        <li><a href="#" class="hover:text-primary transition-colors flex items-center gap-2"><i class="bi bi-chevron-right text-xs"></i> AI & Deep Learning</a></li>
                        <li><a href="#" class="hover:text-primary transition-colors flex items-center gap-2"><i class="bi bi-chevron-right text-xs"></i> Review sản phẩm</a></li>
                    </ul>
                </div>

                 <!-- Links 2 -->
                <div>
                    <h4 class="font-bold text-gray-900 text-lg mb-6">Thông tin</h4>
                    <ul class="space-y-3 text-sm">
                        <li><a href="#" class="hover:text-primary transition-colors">Về chúng tôi</a></li>
                        <li><a href="#" class="hover:text-primary transition-colors">Liên hệ & Hợp tác</a></li>
                        <li><a href="#" class="hover:text-primary transition-colors">Điều khoản sử dụng</a></li>
                        <li><a href="#" class="hover:text-primary transition-colors">Chính sách bảo mật</a></li>
                        <li><a href="#" class="hover:text-primary transition-colors">Tuyển dụng</a></li>
                    </ul>
                </div>

                <!-- Newsletter -->
                <div>
                    <h4 class="font-bold text-gray-900 text-lg mb-6">Đăng ký nhận tin</h4>
                    <p class="text-gray-500 text-sm mb-4">Nhận thông báo về bài viết mới nhất qua email.</p>
                    <form id="newsletterForm" class="flex flex-col gap-3">
                        <input id="newsletterEmail" type="email" placeholder="Email của bạn..." required
                               class="bg-gray-50 border border-gray-200 rounded-lg px-4 py-3 w-full text-gray-900 focus:border-primary focus:ring-1 focus:ring-primary outline-none text-sm transition-all" />
                        <button type="submit" id="newsletterBtn"
                                class="bg-primary text-white px-6 py-3 rounded-lg font-bold hover:bg-opacity-90 transition-opacity shadow-lg text-sm uppercase tracking-wide">
                            Đăng ký ngay
                        </button>
                    </form>
                    <p id="newsletterMsg" class="mt-3 text-sm hidden"></p>
                </div>
            </div>

            <div class="border-t border-gray-200 pt-8 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500">
                <p>&copy; 2026 @_siteTitle. All rights reserved.</p>
                <div class="flex gap-6 mt-4 md:mt-0">
                    <span class="flex items-center gap-1"><i class="bi bi-geo-alt-fill"></i> Hà Nội, Việt Nam</span>
                    <span class="flex items-center gap-1"><i class="bi bi-envelope-fill"></i> @_contactEmail</span>
                </div>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.getElementById('newsletterForm')?.addEventListener('submit', async function(e) {
            e.preventDefault();
            const email = document.getElementById('newsletterEmail').value.trim();
            const btn = document.getElementById('newsletterBtn');
            const msg = document.getElementById('newsletterMsg');

            if (!email) return;

            btn.disabled = true;
            btn.textContent = 'Đang gửi...';
            msg.className = 'mt-3 text-sm hidden';

            try {
                const res = await fetch('/api/newsletter/subscribe', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email })
                });
                const data = await res.json();

                msg.textContent = data.message || (res.ok ? 'Đăng ký thành công!' : 'Có lỗi xảy ra');
                msg.className = res.ok
                    ? 'mt-3 text-sm text-green-600 font-medium'
                    : 'mt-3 text-sm text-red-600 font-medium';

                if (res.ok) document.getElementById('newsletterEmail').value = '';
            } catch {
                msg.textContent = 'Lỗi kết nối. Vui lòng thử lại.';
                msg.className = 'mt-3 text-sm text-red-600 font-medium';
            } finally {
                btn.disabled = false;
                btn.textContent = 'Đăng ký ngay';
            }
        });
    </script>
</body>
</html>

