@model Dictionary<string, string>
@{
    string Get(string key, string fallback = "") => Model.ContainsKey(key) && !string.IsNullOrEmpty(Model[key]) ? Model[key] : fallback;
    var siteTitle = Get("SiteTitle", "TechNews");
    var siteDesc = Get("SiteDescription", "Cập nhật tin tức công nghệ nóng hổi, đánh giá sản phẩm chuyên sâu và hướng dẫn thủ thuật hữu ích mỗi ngày.");
    var contactEmail = Get("ContactEmail", "contact@technews.com");
    var contactPhone = Get("ContactPhone", "");
    var facebookUrl = Get("FacebookUrl", "#");
    var youtubeUrl = Get("YoutubeUrl", "#");
}

<!-- Brand -->
<div>
    <a href="/" class="flex items-center gap-2 mb-6 group">
        <div class="relative w-10 h-10 bg-primary text-white flex items-center justify-center font-bold text-xl rounded-lg shadow-lg group-hover:scale-105 transition-transform duration-300">
            @siteTitle[0]
        </div>
        <span class="text-2xl font-extrabold tracking-tight text-gray-900">@siteTitle</span>
    </a>
    <p class="text-gray-500 text-sm leading-relaxed mb-6">
        @siteDesc
    </p>
    <div class="flex gap-4">
        <a href="@facebookUrl" target="_blank" class="w-9 h-9 rounded-full bg-gray-100 flex items-center justify-center text-gray-500 hover:bg-primary hover:text-white transition-all"><i class="bi bi-facebook"></i></a>
        <a href="@youtubeUrl" target="_blank" class="w-9 h-9 rounded-full bg-gray-100 flex items-center justify-center text-gray-500 hover:bg-primary hover:text-white transition-all"><i class="bi bi-youtube"></i></a>
    </div>
</div>

<!-- Footer Bottom Data -->
<script>
    window.__siteTitle = '@Html.Raw(siteTitle.Replace("'", "\\'"))';
    window.__contactEmail = '@contactEmail';
</script>
