@model Project_News.Models.ContactViewModel
@{
    ViewData["Title"] = "Liên hệ";
}

<div class="max-w-7xl mx-auto px-4 py-12">
    <!-- Header -->
    <div class="text-center mb-16">
        <span class="text-primary font-bold tracking-wider uppercase text-sm">Kết nối với chúng tôi</span>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mt-2 mb-6 font-serif">Liên hệ TechNews</h1>
        <p class="text-gray-600 max-w-2xl mx-auto text-lg">Chúng tôi luôn sẵn sàng lắng nghe ý kiến đóng góp, câu hỏi hoặc yêu cầu hợp tác của bạn. Hãy để lại tin nhắn, chúng tôi sẽ phản hồi trong thời gian sớm nhất.</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-50 border border-green-200 text-green-700 px-6 py-4 rounded-xl flex items-center gap-3 mb-8 shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill text-xl"></i>
            <span class="font-medium">@TempData["SuccessMessage"]</span>
        </div>
    }

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 mb-20">
        
        <!-- Contact Info (Left Column) -->
        <div class="lg:col-span-1 space-y-8">
            <!-- Main Office -->
            <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
                <h3 class="font-bold text-xl mb-6 flex items-center gap-2">
                    <i class="bi bi-building text-primary"></i> Văn phòng chính
                </h3>
                <div class="space-y-4 text-gray-600">
                    <p class="flex gap-3">
                        <i class="bi bi-geo-alt mt-1 text-gray-400"></i>
                        <span>Tầng 18, Tòa nhà TechNews, Khu Công nghệ cao Hòa Lạc, Hà Nội</span>
                    </p>
                    <p class="flex gap-3">
                        <i class="bi bi-telephone mt-1 text-gray-400"></i>
                        <span>1900 1234 5678</span>
                    </p>
                    <p class="flex gap-3">
                        <i class="bi bi-envelope mt-1 text-gray-400"></i>
                        <span>contact@technews.com</span>
                    </p>
                </div>
            </div>

            <!-- Departments -->
            <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
                <h3 class="font-bold text-xl mb-6 flex items-center gap-2">
                    <i class="bi bi-people text-primary"></i> Bộ phận liên hệ
                </h3>
                <div class="space-y-6">
                    <div>
                        <h4 class="font-bold text-gray-900 text-sm uppercase tracking-wide mb-2">Hợp tác & Quảng cáo</h4>
                        <p class="text-gray-600 text-sm"><i class="bi bi-envelope mr-2"></i>ads@technews.com</p>
                        <p class="text-gray-600 text-sm"><i class="bi bi-telephone mr-2"></i>0987 654 321 (Mr. Tuấn)</p>
                    </div>
                    <div class="border-t border-gray-100 pt-4">
                        <h4 class="font-bold text-gray-900 text-sm uppercase tracking-wide mb-2">Hỗ trợ kỹ thuật</h4>
                        <p class="text-gray-600 text-sm"><i class="bi bi-envelope mr-2"></i>support@technews.com</p>
                        <p class="text-gray-600 text-sm"><i class="bi bi-clock mr-2"></i>24/7</p>
                    </div>
                </div>
            </div>

            <!-- Working Hours -->
            <div class="bg-slate-900 p-8 rounded-2xl text-white">
                <h3 class="font-bold text-xl mb-6 flex items-center gap-2">
                    <i class="bi bi-clock"></i> Giờ làm việc
                </h3>
                <div class="space-y-3">
                    <div class="flex justify-between border-b border-gray-700 pb-2">
                        <span class="text-gray-400">Thứ 2 - Thứ 6</span>
                        <span class="font-bold">8:00 - 17:30</span>
                    </div>
                    <div class="flex justify-between border-b border-gray-700 pb-2">
                        <span class="text-gray-400">Thứ 7</span>
                        <span class="font-bold">8:00 - 12:00</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-400">Chủ nhật</span>
                        <span class="text-[#9f224e] font-bold">Nghỉ</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Form (Right Column - Wider) -->
        <div class="lg:col-span-2">
            <div class="bg-white p-8 md:p-10 rounded-2xl shadow-lg border border-gray-100 h-full">
                <h3 class="text-2xl font-bold text-gray-900 mb-2">Gửi tin nhắn cho chúng tôi</h3>
                <p class="text-gray-500 mb-8">Điền thông tin vào form dưới đây, chúng tôi sẽ liên hệ lại với bạn sớm nhất.</p>

                <form asp-action="Contact" method="post" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Name" class="block text-sm font-bold text-gray-700 mb-2">Họ và tên <span class="text-red-500">*</span></label>
                            <input asp-for="Name" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:bg-white focus:border-primary focus:ring-0 transition outline-none" placeholder="Nhập họ tên của bạn" />
                            <span asp-validation-for="Name" class="text-red-500 text-xs mt-1 block"></span>
                        </div>
                        <div>
                            <label asp-for="Email" class="block text-sm font-bold text-gray-700 mb-2">Email <span class="text-red-500">*</span></label>
                            <input asp-for="Email" type="email" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:bg-white focus:border-primary focus:ring-0 transition outline-none" placeholder="example@email.com" />
                            <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 block"></span>
                        </div>
                    </div>

                    <div>
                        <label asp-for="Subject" class="block text-sm font-bold text-gray-700 mb-2">Tiêu đề <span class="text-red-500">*</span></label>
                        <select asp-for="Subject" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:bg-white focus:border-primary focus:ring-0 transition outline-none text-gray-600">
                            <option value="">Chọn vấn đề liên hệ</option>
                            <option value="Hợp tác quảng cáo">Hợp tác quảng cáo</option>
                            <option value="Hỗ trợ tài khoản">Hỗ trợ tài khoản</option>
                            <option value="Góp ý nội dung">Góp ý nội dung</option>
                            <option value="Báo lỗi website">Báo lỗi website</option>
                            <option value="Khác">Khác</option>
                        </select>
                         <!-- Fallback input if needed, but select is better for UX. Assuming Model.Subject binds to string. -->
                        <span asp-validation-for="Subject" class="text-red-500 text-xs mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="Message" class="block text-sm font-bold text-gray-700 mb-2">Nội dung <span class="text-red-500">*</span></label>
                        <textarea asp-for="Message" rows="6" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:bg-white focus:border-primary focus:ring-0 transition outline-none resize-none" placeholder="Nhập nội dung chi tiết..."></textarea>
                        <span asp-validation-for="Message" class="text-red-500 text-xs mt-1 block"></span>
                    </div>

                    <div class="pt-4">
                        <button type="submit" class="w-full md:w-auto px-8 py-3 bg-primary text-white font-bold rounded-lg hover:bg-red-700 transition shadow-lg shadow-primary/30 flex items-center justify-center gap-2">
                            Gửi tin nhắn <i class="bi bi-send-fill"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Map Section -->
    <div class="mb-20 rounded-2xl overflow-hidden shadow-lg border border-gray-200 h-[400px] relative group">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.0968141837475!2d105.52277027586566!3d21.028811880620317!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31345b465a4e65fb%3A0xaae6040cfabe8fe!2zVHLGsOG7nW5nIMSQ4bqhaSBI4buNYyBGUFQ!5e0!3m2!1svi!2s!4v1709459341490!5m2!1svi!2s" 
                class="w-full h-full grayscale hover:grayscale-0 transition duration-700" 
                style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        <div class="absolute bottom-4 left-4 bg-white/90 backdrop-blur px-4 py-2 rounded-lg shadow-sm text-xs font-bold text-gray-600">
            <i class="bi bi-geo-alt-fill text-primary"></i> Khu Công nghệ cao Hòa Lạc
        </div>
    </div>

    <!-- FAQ Section -->
    <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-10 font-serif">Câu hỏi thường gặp</h2>
        <div class="space-y-4">
            
            <div class="bg-white rounded-xl border border-gray-100 overflow-hidden">
                <button class="w-full flex items-center justify-between p-6 text-left font-bold text-gray-800 hover:bg-gray-50 transition" onclick="this.nextElementSibling.classList.toggle('hidden'); this.querySelector('i').classList.toggle('rotate-180')">
                    <span>Làm sao để đăng bài viết lên TechNews?</span>
                    <i class="bi bi-chevron-down transition-transform"></i>
                </button>
                <div class="p-6 pt-0 text-gray-600 hidden border-t border-gray-50">
                    Hiện tại TechNews chỉ chấp nhận bài viết từ các tác giả đã được phê duyệt. Nếu bạn muốn trở thành cộng tác viên, vui lòng gửi CV và bài viết mẫu về email contact@technews.com.
                </div>
            </div>

            <div class="bg-white rounded-xl border border-gray-100 overflow-hidden">
                <button class="w-full flex items-center justify-between p-6 text-left font-bold text-gray-800 hover:bg-gray-50 transition" onclick="this.nextElementSibling.classList.toggle('hidden'); this.querySelector('i').classList.toggle('rotate-180')">
                    <span>Tôi có thể quảng cáo trên website không?</span>
                    <i class="bi bi-chevron-down transition-transform"></i>
                </button>
                <div class="p-6 pt-0 text-gray-600 hidden border-t border-gray-50">
                    Có, chúng tôi cung cấp nhiều gói quảng cáo hấp dẫn như Banner, Bài PR, Tài trợ chuyên mục. Vui lòng liên hệ bộ phận kinh doanh qua email ads@technews.com để nhận báo giá chi tiết.
                </div>
            </div>

            <div class="bg-white rounded-xl border border-gray-100 overflow-hidden">
                <button class="w-full flex items-center justify-between p-6 text-left font-bold text-gray-800 hover:bg-gray-50 transition" onclick="this.nextElementSibling.classList.toggle('hidden'); this.querySelector('i').classList.toggle('rotate-180')">
                    <span>TechNews có tuyển dụng không?</span>
                    <i class="bi bi-chevron-down transition-transform"></i>
                </button>
                <div class="p-6 pt-0 text-gray-600 hidden border-t border-gray-50">
                    Chúng tôi thường xuyên tuyển dụng các vị trí Content Writer, SEO Specialist và Developer. Thông tin tuyển dụng sẽ được cập nhật tại fanpage chính thức của TechNews.
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
