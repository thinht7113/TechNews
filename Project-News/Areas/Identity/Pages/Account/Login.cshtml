@page
@model Project_News.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null; // Standalone layout
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechNews Admin</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body { font-family: 'Inter', sans-serif; }
    </style>
</head>
<body class="bg-gray-50 h-screen flex items-center justify-center p-4">

    <div class="bg-white rounded-2xl shadow-xl w-full max-w-md overflow-hidden">
        <!-- Form Only -->
        <div class="w-full p-8 md:p-12">
            <div class="text-center mb-8">
                 <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-[#9f224e]/10 text-[#9f224e] mb-4">
                    <i class="bi bi-shield-lock-fill text-2xl"></i>
                </div>
                <h1 class="text-2xl font-bold text-gray-900">Đăng nhập</h1>
                <p class="text-gray-500 mt-2 text-sm">Chào mừng bạn trở lại!</p>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4 text-center"></div>

                <div class="mb-5">
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="bi bi-envelope text-gray-400"></i>
                        </div>
                        <input asp-for="Input.Email" class="block w-full pl-10 pr-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#9f224e] focus:border-[#9f224e] transition sm:text-sm" placeholder="user@example.com" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-red-500 text-xs mt-1"></span>
                </div>

                <div class="mb-5">
                    <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-2">Mật khẩu</label>
                    <div class="relative">
                         <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="bi bi-lock text-gray-400"></i>
                        </div>
                        <input asp-for="Input.Password" type="password" class="block w-full pl-10 pr-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#9f224e] focus:border-[#9f224e] transition sm:text-sm" placeholder="••••••••" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-red-500 text-xs mt-1"></span>
                </div>

                <div class="flex items-center justify-between mb-6">
                    <div class="flex items-center">
                        <input asp-for="Input.RememberMe" type="checkbox" class="h-4 w-4 text-[#9f224e] focus:ring-[#9f224e] border-gray-300 rounded" />
                        <label asp-for="Input.RememberMe" class="ml-2 block text-sm text-gray-900">Ghi nhớ tôi</label>
                    </div>
                    <a href="#" class="text-sm font-medium text-[#9f224e] hover:underline">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-[#9f224e] hover:bg-[#851b41] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#9f224e] transition">
                    Đăng nhập hệ thống
                </button>
            </form>

            <div class="mt-8 text-center">
                <p class="text-sm text-gray-500">
                    Chưa có tài khoản? 
                    <a href="/Identity/Account/Register" class="font-medium text-[#9f224e] hover:underline">Đăng ký ngay</a>
                </p>
            </div>
        </div>
    </div>

</body>
</html>
