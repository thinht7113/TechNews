@{
    ViewData["Title"] = "Thư viện Media";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="bg-white p-6 rounded shadow-sm border border-gray-100">
    <div class="text-center py-12">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-blue-50 text-blue-500 mb-4">
            <i class="bi bi-images text-3xl"></i>
        </div>
        <h2 class="text-xl font-bold text-gray-800 mb-2">Thư viện Media</h2>
        <p class="text-gray-500 max-w-md mx-auto mb-6">
            Tính năng quản lý thư viện hình ảnh đang được phát triển.
            Hiện tại hình ảnh được upload trực tiếp trong bài viết.
        </p>
        <button class="bg-primary text-white px-6 py-2 rounded-lg hover:bg-opacity-90">
            Upload ảnh mới
        </button>
    </div>
</div>
